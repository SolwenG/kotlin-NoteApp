<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NoteApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
       <item name="colorPrimary">@color/duck</item>
       <item name="colorAccent">@color/accent</item>
       <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.NoteApp" parent="Base.Theme.NoteApp" />
    <style name="TitleFont">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextFont">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="FabButtonShape">
        <item name="cornerSize">50%</item>
    </style>
</resources>